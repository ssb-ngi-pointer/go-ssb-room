{{ define "title" }}{{i18n "AuthFallbackTitle"}}{{ end }}
{{ define "content" }}
<div class="page-header">
  <h1 id="welcome">{{i18n "AuthFallbackWelcome"}}</h1>
</div>
<div class="row">
    <div class="col-md-12">
    <form method="POST" action={{urlTo "auth:fallback:signin"}}>
        {{ .csrfField }}
        <input type="text" name="user">
        <input type="password" name="pass">
        <input type="submit">
    </form>
    </div>
</div> <!-- /row -->
{{end}}